<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Destination</th>
      <th>Departure</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.source %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.departure %></td>
        <td><%= button_to 'Choose Match', choose_user_trip_matches_path(params[:user_id],params[:id],:matched_trip_id => trip.id, :format => :json) %></td>
      </tr>
    <% end %>
  </tbody>
</table>