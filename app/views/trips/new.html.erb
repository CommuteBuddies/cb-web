<%= form_for(@trip, :url => user_trips_path) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div align="center"><h1>Create new Trip</h1></div>
 <div class="field" align="center">
    <%= f.label :source %>
    <%= f.text_field :source %>
    <%= f.text_field :lat_src, :type=>"hidden" %>
     <%= f.text_field :long_src, :type=>"hidden"  %>
    </div><br/>
  
  
  <div class="field" align="center">
    <%= f.label :destination %>
    <%= f.text_field :destination %>
    <%= f.text_field :lat_dest, :type=>"hidden"  %>
     <%= f.text_field :long_dest, :type=>"hidden"  %>
  </div><br/>
  
  <div class="field" align="center">
    <%= f.label :departure %>
    <%= f.datetime_select :departure %>
  </div><br/>
  
  <div class="actions" align="center">
    <%= f.submit :name=>"directions",:value=>"Show Directions" ,:type=>"button",:onclick=>"calcRoute()" %>
  <%= f.submit :submit, :name=>"submit"%>
  </div><br/>
<% end %>

