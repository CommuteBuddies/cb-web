<table>
  <thead>
    <tr>
      <th>Source</th>
      <th>Destination</th>
      <th>Departure</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @trips.each do |trip| %>
      <tr>
        <td><%= trip.source %></td>
        <td><%= trip.destination %></td>
        <td><%= trip.departure %></td>
        <td><%= link_to 'Matches', "#{trip.id}/matches" %></td>
        <td><%= link_to 'Show Chosen Matches', user_trip_matches_path(params[:user_id],trip.id) %></td>
        <td><%= link_to 'Show', "#{trip.id}" %></td>
        <td><%= link_to 'Edit', "#{trip.id}/edit" %></td>
        <td><%= link_to 'Destroy', 'delete', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>